                       <br/>
                       <br/>
                       <label for="report">Intervention Description</label>
                       <input required type="text" value="" class="form-control" name="report" id="descrFrm">
                       <button type="submit" class="btn btn-rblue" id="btnForm" style="background-color:#EB2C55;"><i class="fa fa-check"></i>SUBMIT</button>
                       <input name="author" id="current_author"><%= current_user.id %>
